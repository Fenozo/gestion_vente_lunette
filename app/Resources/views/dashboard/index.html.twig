{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="min-height:450px;margin-top:200px;">
<div class="row mb-2">
        <div class="col-md-4">
          <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-primary">Nombre de produit en stock (Entrer)</strong>
              <h3 class="mb-0">
                <a class="text-dark" href="#">{{ stock_disponible }}</a>
              </h3>
              <div class="mb-1 text-muted">{{ dernier_stock.createdAt| date('M d') }}</div>
              <p class="card-text mb-auto">
              {% set contenu1 = 'Les nombres de stock disponible seront afficher ici.' %}
              {{ contenu1 | striptags | slice(0, 60) }}{% if contenu1|length > 60 %} [..] {% endif %}
              </p>
              
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card flex-md-row mb-4 shadow-sm h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-success">Total des commandes (Sortie)</strong>
              <h3 class="mb-0">
                <a class="text-dark" href="#">333</a>
              </h3>
              <div class="mb-1 text-muted">Nov 11</div>
               {% set contenu = 'Les nombre des commandes sont afficher ici' %}
              {{ contenu | striptags | slice(0, 60) }}{% if contenu|length > 60 %} [..] {% endif %}
              <p class="card-text mb-auto"></p>
              
            </div>
          </div>
        </div>
      </div>
</div>

{% endblock %}